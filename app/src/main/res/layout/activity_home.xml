<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:errorEnabled="true"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/company_name"
            android:layout_centerHorizontal="true"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/child_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_format_align_center_black_24dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_website"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/company_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/child_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Domain Name"
                android:inputType="text"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_language_black_24dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_contact"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/company_website"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/child_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="text"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_call_black_24dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_description"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_below="@+id/company_contact"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/child_description"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="Description"
                android:inputType="text"
                android:maxLines="20"
                android:textSize="20sp"
                android:scrollbars="vertical"
                android:drawableLeft="@drawable/ic_airplay_black_24dp"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="162dp"
            android:layout_marginTop="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_green_round"
            android:layout_centerHorizontal="true"
            android:text="@string/but_2_name"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"/>

    </RelativeLayout>

</ScrollView>