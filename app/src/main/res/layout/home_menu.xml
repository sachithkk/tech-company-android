<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/btn_home_search"
        android:paddingLeft="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_green_round"
        android:layout_centerHorizontal="true"
        android:text="@string/search_btn"
        android:drawableLeft="@drawable/ic_search_black_24dp"/>

    <Button
        android:id="@+id/btn_home_view_company"
        android:paddingLeft="10dp"
        android:layout_margin="5dp"
        android:layout_below="@id/btn_home_search"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_green_round"
        android:layout_centerHorizontal="true"
        android:text="View Company"
        android:drawableLeft="@drawable/ic_format_list_bulleted_black_24dp"/>

    <Button
        android:id="@+id/btn_home_add_company"
        android:paddingLeft="10dp"
        android:layout_margin="5dp"
        android:layout_below="@id/btn_home_view_company"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_green_round"
        android:layout_centerHorizontal="true"
        android:text="Add Company"
        android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"/>

    <Button
        android:id="@+id/btn_home_edit_company"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:layout_below="@id/btn_home_add_company"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_green_round"
        android:layout_centerHorizontal="true"
        android:text="Edit Company"
        android:drawableLeft="@drawable/ic_edit_black_24dp"/>






</RelativeLayout>